							/>

					<TextBox
							Grid.Row="2"
							Grid.RowSpan="2"
							Grid.Column="3"
							Text="+"
							Style="{StaticResource tbPlus}"
							/>

					<TextBox
							Grid.Row="2"
							Grid.Column="4"
							Margin="0,3"
							HorizontalAlignment="Stretch"
							Text="{x:Static res:AppStrings.R_NewShtFmtTitleDivChars}"
							Style="{StaticResource tbLblStyleOrig}"
							/>

					<TextBox
							Grid.Row="2"
							Grid.RowSpan="2"
							Grid.Column="5"
							Text="+"
							Style="{StaticResource tbPlus}"
							/>

					<TextBox
							Grid.Row="2"
							Grid.Column="6"
							Margin="0,3"
							HorizontalAlignment="Stretch"
							Text="{x:Static res:AppStrings.R_NewShtFmtTitleSuffix}"
