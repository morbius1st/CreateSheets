						Width="50"
						Height="{StaticResource newSheetItemHeight}"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						SelectedIndex="{Binding CopiesIdx, Mode=TwoWay}"
						Style="{DynamicResource ComboBoxStyle}"
						/>

				<Button
						x:Name="btnHelpUseThisTitleBlock"
						Content="?"
						Grid.Row="1"
						Grid.Column="0"
						Margin="0,6,0,0"
						VerticalAlignment="top"
						Tag="HelpUseThisTblk"
						Style="{StaticResource btnHelpStyle}"
						/>
				<TextBox
						Grid.Row="1"
						Grid.Column="2"
						Grid.ColumnSpan="3"
						Margin="7,5,0,0"
						VerticalAlignment="Top"
						Text="{x:Static res:AppStrings.R_UseThisTtlBlk}"
						Style="{StaticResource tbLblStyle}"
						/>

				<ComboBox
						x:Name="cbxTitleBlock"
						Grid.Row="1"
						Grid.Column="2"
						Grid.ColumnSpan="3"
						Margin="7,0,0,1"
						Height="{StaticResource newSheetItemHeight}"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Bottom"
						SelectedItem="{Binding SelectedTitleBlock}"
						ItemsSource="{Binding TitleBlockList}"
						Style="{DynamicResource ComboBoxStyle}"
						/>

				<Button
						x:Name="btnHelpUseParameters"
						Content="?"
						Grid.Row="2"
						Grid.Column="0"
						Tag="HelpUseParams"
						Style="{StaticResource btnHelpStyle}"
						/>

				<CheckBox
						Grid.Row="2"
						Grid.Column="2"
						Margin="6,0,0,5"
						Width="16"
						Height="16"
						Padding="0"
						HorizontalAlignment="Left"
						VerticalAlignment="Bottom"
						BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						IsChecked="{Binding UseParameters, Mode=TwoWay}"
						/>

				<TextBox
						Grid.Row="2"
						Grid.Column="2"
						Grid.ColumnSpan="3"
						Margin="31,6,0,4"
						Text="{x:Static res:AppStrings.R_UseSheetParameters}"
						Style="{StaticResource tbLblStyle}"
						/>

				<Button
						x:Name="btnHelpOneClickReuseSheet"
						Content="?"
						Grid.Row="3"
						Grid.Column="0"
						Margin="0,0,0,2"
						VerticalAlignment="Bottom"
						Tag="HelpUseAsTemplate"
						Style="{StaticResource btnHelpStyle}"
						/>

				<CheckBox
						Grid.Row="3"
						Grid.Column="2"
						Margin="6,0,0,2"
						Width="16"
						Height="16"
						Padding="0"
						HorizontalAlignment="Left"
						VerticalAlignment="Bottom"
						BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
						IsChecked="{Binding UseTemplateSheet, Mode=TwoWay}"
						/>

				<TextBox
						Grid.Row="3"
						Grid.Column="2"
						Grid.ColumnSpan="3"
						Margin="31,6,0,4"
