<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  >

  <Color
    x:Key="lt_Gray">#FFDDDDDD</Color>

  <SolidColorBrush
    x:Key="ltGray"
    Color="{StaticResource lt_Gray}" />

  <!--#region +Styles -->

  <Style
    x:Key="stdButton"
    TargetType="Button">
    <Setter
      Property="Height"
      Value="36" />
    <Setter
      Property="Width"
      Value="110" />
    <Setter
      Property="VerticalAlignment"
      Value="Top" />
    <Setter
      Property="HorizontalAlignment"
      Value="Right" />
    <Setter
      Property="VerticalContentAlignment"
      Value="Center" />
    <Setter
      Property="HorizontalContentAlignment"
      Value="Center" />
    <Setter
      Property="Padding"
      Value="0" />
    <Setter
      Property="Background"
      Value="{StaticResource ltGray}" />
    <Setter
      Property="BorderBrush"
      Value="{StaticResource {x:Static SystemColors.ControlDarkBrushKey}}" />
  </Style>

  <!--#endregion -->

</ResourceDictionary>